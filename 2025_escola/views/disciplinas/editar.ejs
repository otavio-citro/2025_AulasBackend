<%- include ('../includes/header.ejs', {titulo: 'cadastro de turmas' }) %>




    <main>
        <h2>atualizando dados de disciplinas</h2>

        <form action="/disciplinas/editar/<%= dadosdisciplinas.id_disciplina %>" method="post" class="form">
            <div class="form-group">
                <label>Nome da disciplina:</label>
                <input type="text" name="nome_disciplina" value="<%= dadosdisciplinas.nome_disciplina %>" required>

            </div>
            <div class="form-group">
                <label>professor:</label>
                <select name="id_professor" required>
                    <option value="">selecione o professor</option>
                    <% for (let professor of dadosprofessores) { %>
                        <option value="<%= professor.id_professor %>" <%
                            if(dadosdisciplinas.id_professor == professor.id_professor) { %>
                            selected
                            <% } %>
                                ><%= professor.nome %>
                        </option>
                        <% } %>
                </select>

            </div>
            <button type="submit" class="btn btn-secundario">salvar</button>
            <a href="/disciplinas/listar" class="btn btn-secundario">cancelar</a>


        </form>

    </main>




    <%- include ('../includes/footer.ejs') %>