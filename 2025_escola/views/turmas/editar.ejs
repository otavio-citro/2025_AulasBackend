<%- include ('../includes/header.ejs', {titulo: 'cadastro de turmas' }) %>




    <main>
        <h2>cadastre uma nova turma</h2>

        <form action="/turmas/editar/<%= dadosturmas.id_turma %>" method="post" class="form">
            <div class="form-group">
                <label>Nome da turma:</label>
                <input type="text" name="nome_turma"  value="<%= dadosturmas.nome_turma %>" required>

                <button type="submit" class="btn btn-secundario">salvar</button>
                <a href="/turmas/listar" class="btn btn-secundario">cancelar</a>
            </div>


        </form>

    </main>




